<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Button
        android:id="@+id/btn_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6018A6F"
        android:text="Details Form"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*First name"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btn_detail"
        app:layout_constraintStart_toStartOf="@id/btn_detail"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/tv_firstName"
        app:layout_constraintEnd_toEndOf="@id/btn_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_firstName"
        app:layout_constraintTop_toTopOf="@id/tv_firstName"
        />

    <TextView
        android:id="@+id/tv_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Last name"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_firstName"
        app:layout_constraintStart_toStartOf="@id/btn_detail"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/tv_lastName"
        app:layout_constraintEnd_toEndOf="@id/btn_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_lastName"
        app:layout_constraintTop_toTopOf="@id/tv_lastName"
        />

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*Gender"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_lastName"
        app:layout_constraintStart_toStartOf="@id/btn_detail"
        />

    <TextView
        android:id="@+id/tv_ages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age on December 10,2018"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_gender"
        app:layout_constraintStart_toStartOf="@id/btn_detail"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/tv_ages"
        app:layout_constraintEnd_toEndOf="@id/btn_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_ages"
        app:layout_constraintTop_toTopOf="@id/tv_ages"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/gendres"
        app:layout_constraintStart_toEndOf="@id/tv_gender"
        app:layout_constraintTop_toTopOf="@id/tv_gender"
        android:layout_marginStart="8dp"
        android:layout_alignBaseline="@id/tv_gender"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintTop_toBottomOf="@id/tv_ages"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@id/tv_ages"
        android:textSize="15sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>