<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homework2">
    <Button
        android:id="@+id/btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#1E88E5"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Row1"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#1E88E5"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        android:text="Row1 Col1"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"

        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="#1E88E5"
        app:layout_constraintEnd_toEndOf="@id/btn_1"
        app:layout_constraintTop_toTopOf="@id/btn_2"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintBottom_toBottomOf="@id/btn_2"
        android:text="Row2 Col2"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:layout_marginStart="16dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30"/>

    <Button
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#1E88E5"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/btn_1"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        app:layout_constraintEnd_toEndOf="@id/guideline1"
        android:text="Row3 Col1"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66"
        />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@color/white"
        android:background="#1E88E5"
        app:layout_constraintStart_toStartOf="@id/btn_3"
        app:layout_constraintTop_toTopOf="@id/btn_4"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintBottom_toBottomOf="@id/btn_4"
        android:text="Row3 Col2"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"
        />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#1E88E5"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        app:layout_constraintEnd_toEndOf="@id/btn_3"
        app:layout_constraintBottom_toBottomOf="@id/btn_4"
        android:text="Row3 Col3"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        />

    <Button
        android:id="@+id/btn_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="#1E88E5"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Row4"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>